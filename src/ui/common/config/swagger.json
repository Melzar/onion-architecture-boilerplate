    "/equipment": {
      "post": {
        "security": [
          {
            "bearer": []
          }
        ],
        "tags": [
          "equipment"
        ],
        "description": "Equipment endpoint",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
