            "required": true,
            "schema": {
              "$ref": "#/definitions/UserDeleteRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns authentication token"
          }
        }
      }
    }
  },
  "definitions": {
    "AuthenticationResponse": {
      "properties": {
